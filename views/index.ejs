<%- include('header') -%>
<%- include('script') -%>

<div class="row">
  
</div>

<div id="map" style='width: 100%; height: 400px; margin-top: 43px;'></div>

<div class="row" id="map-container" style="width: 100%; margin-top: 400px;">
    <div class="px-0 col-12 position-relative">
      <div id="home-map"></div>
    </div>
    <div class="py-2 col-12">
      <div class="row justify-content-center">
        <div class="col-auto">
            <span class="pointer food">●</span>Food
        </div>
        <div class="col-auto">
            <span class="pointer clothes">●</span>Clothes
        </div>
        <div class="col-auto">
            <span class="pointer medical">●</span>Medical
        </div>
        <div class="col-auto">
            <span class="pointer other">●</span>Other
        </div>
      </div>
    </div>
  </div>
<div class="mt-5 container">
    <div class="row justify-content-between">
      <div class="col-auto">
          <h2> OnGoing Events </h2>
      </div>
    </div>
    <hr />
    <div class="row">
      <% events.forEach(function(event){ %>
      <div class="pt-3 col-12 col-md-6 col-lg-4">
        <div class="card event-card">
          <div class="card-header">
            <h3><%= event.event_name %></h3>
            <div class="text-muted"> <%= event.event_orgainizer %></div>
          </div>
          <div class="card-body">
            <div class="row justify-content-around">
              <div class="col-6">
                <h5> Items </h5>
                <p> <%= event.event_type %> </p>
              </div>
            </div>
  
          </div>
          <div class="card-footer">
            <div class="row justify-content-between">
              <div class="col-auto">
                <By:h3> <%= event.event_orgainizer %></h3>
              </div>
              <!-- <div class="col-auto">
                <button class="px-3 btn btn-primary"> Details </button>
              </div> -->
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  <script src="/js/details.js"></script>


<%- include('footer') -%> 